<div class="data-form">
    <form action="/users/create" method="POST">
        <h2>Add a new Expense</h2>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" placeholder="First" autofocus>
        <br>
        <label for="amount">Amount</label>
        <input type="text" name="amount" id="amount" placeholder="Last">
        <br>
        <label for="category">Category</label>
        <input type="category" name="category" id="category" required>
        <br>
        <label for="description">Description</label>
        <input type="description" name="description" id="description" required>
        <br>
        <label for="date">Date</label>
        <input type="date" name="date" id="date" required>
        <br><br>

        <button type="submit">Add Expense</button>
    </form>
</div>