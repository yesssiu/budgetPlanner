<section id="hero">
  <h1>Welcome to Budget Manager</h1>
  <p>
    Easily track your expenses, manage your income, and stay on top of your
    finances.
  </p>
  <img src="/images/hero-image.png" alt="Budget Manager" />
</section>
<section id="login-section">
  <h2>Sign in</h2>
  <div class="login-form">
    <form action="/login" method="POST">
      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        placeholder="Enter your email"
      />

      <label for="password">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        placeholder="Enter your password"
      />

      <button type="submit">Login</button>
    </form>
  </div>
</section>
