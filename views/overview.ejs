<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Overview</title>
  </head>
  <body>
    <section id="budgetOverview">
      <h1>Overview</h1>

      <button><a href="/income/new">New Income</a></button>
      <button><a href="/expense/new">New Expense</a></button>
      <br />
      <br />
      <div class="budgetItemTable">
        <h2>Expenses</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Amount</th>
              <th>Category</th>
              <th>Description</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% expenseItems.forEach(expenseItem => { %>
            <tr>
              <td><%= expenseItem.title %></td>
              <td><%= expenseItem.amount %></td>
              <td><%= expenseItem.category %></td>
              <td><%= expenseItem.description %></td>
              <td><%= expenseItem.date.toDateString() %></td>
              <td>
                <form action="/expense/<%= expenseItem._id %>/edit">
                  <button type="submit">Edit</button>
                </form>
              </td>
              <td>
                <form action="/expense/<%= expenseItem._id %>/delete?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit" onclick="return confirm('Are you sure you want to delete this expense?')">Delete</button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <br />
      <br />
      <div class="budgetItemTable">
        <h2>Incomes</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Amount</th>
              <th>Category</th>
              <th>Description</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% incomeItems.forEach(incomeItem => { %>
            <tr>
              <td><%= incomeItem.title %></td>
              <td><%= incomeItem.amount %></td>
              <td><%= incomeItem.category %></td>
              <td><%= incomeItem.description %></td>
              <td><%= incomeItem.date.toDateString() %></td>
              <td><a href="/income/<%= incomeItem._id %>/edit">Edit</a></td>
              <td>
                <a
                  href="<%=`income/${incomeItem._id}/delete?_method=DELETE`%>"
                  onclick="return confirm('Are you sure you want to delete this income?')"
                  a
                  >Delete</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </section>
  </body>
</html>
